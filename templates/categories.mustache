{{!
    @template local_helpdesk/categories

    Example context (json):
    {
      "categories": [
        {
          "id": 1,
          "name": "Category 1",
          "description": "Description for Category 1"
        }
      ],
      "has_categorydelete": true
    }

}}

<table class="generaltable">
    <thead>
    <tr>
        <th>{{#str}}categoryname, local_helpdesk{{/str}}</th>
        <th>{{#str}}categorydescription, local_helpdesk{{/str}}</th>
        <th style="white-space: nowrap; width: 100px;">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {{#categories}}
        <tr>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td style="white-space: nowrap; width: 100px;">
                <a href="?actionform=edit&amp;id={{id}}" class="badge badge-success">{{#str}}edit{{/str}}</a>
                {{#has_categorydelete}}
                    <a href="?actionform=delete&amp;id={{id}}" class="badge badge-danger">{{#str}}delete{{/str}}</a>
                {{/has_categorydelete}}
            </td>
        </tr>
    {{/categories}}
    </tbody>
</table>

<p><a href="/local/helpdesk/categories.php?actionform=add"
      class="btn btn-info">{{#str}}addcategory, local_helpdesk{{/str}}</a></p>
