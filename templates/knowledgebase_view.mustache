{{!
    @template local_helpdesk/knowledgebase_view

    Example context (json):
    {
        "category_name": "Category Example",
        "id": 123,
        "title": "Title Example",
        "has_manage": true,
        "has_delete": true,
        "content": "This is the content of the item."
    }

}}

<h2>{{{category_name}}}</h2>
<h3>{{{title}}}
    {{#has_manage}}
        - <a href="?action=edit&amp;id={{id}}" class="badge badge-success">{{#str}}edit{{/str}}</a>
    {{/has_manage}}
    {{#has_delete}}
        - <a href="?action=delete&amp;id={{id}}" class="badge badge-danger">{{#str}}delete{{/str}}</a>
    {{/has_delete}}
</h3>
{{{content}}}
