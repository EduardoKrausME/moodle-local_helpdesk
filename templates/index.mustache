      "status_options": [
        {
          "key": "open",
          "label": "Open",
          "selected": "selected"
        }
      ],
      "priority_options": [
        {
          "key": "high",
          "label": "High",
          "selected": ""
        }
      ],
      "category_options": [
        {
          "key": "technical",
          "label": "Technical",
          "selected": ""
        }
      ],
      "has_manage": true,
      "has_categorymanage": true,
      "has_siteconfig": true,
      "tickets": [
        {
          "idkey": 1,
          "user_picture": "user1.jpg",
          "user_fullname": "John Doe",
          "course_fullname": "Math 101",
